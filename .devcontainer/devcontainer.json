{
    "name": "CSC 4260 Project",
    "build": {
        "dockerfile": "Dockerfile"
    },

    // Features to add to the container
    "features": {
        "ghcr.io/devcontainers/features/github-cli:1": {},
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers/features/docker-in-docker:2": {}
    },

    // Container runtime settings
    "containerEnv": {
        "PYTHONUNBUFFERED": "1"
    },

    // Shared host/container file exchange folders
    "mounts": [
        "source=${localWorkspaceFolder}/io/input,target=/io/input,type=bind,consistency=cached",
        "source=${localWorkspaceFolder}/io/output,target=/io/output,type=bind,consistency=cached"
    ],

    // Port forwarding
    "forwardPorts": [8888],
    "portsAttributes": {
        "8888": { "label": "Jupyter", "onAutoForward": "openPreview" }
    },

    // VS Code extensions
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-toolsai.jupyter",
                "github.copilot"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/bin/python3"
            }
        }
    },

    // Post-create command
    "postCreateCommand": "bash .devcontainer/post-create.sh",

    // Initialization
    "remoteUser": "vscode"
}
